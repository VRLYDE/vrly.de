---
import { Code } from "astro:components";
import Link from "@/components/fundations/elements/Link.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
import GradientText from "@/components/react-bits/GradientText";

import { EXTERNAL_LINKS } from "@/config/external-links";

interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  primaryButtonText?: string;
  secondaryButtonText?: string;
}

const {
  title = "KI-gestützte Automatisierung für Psychotherapeuten in Hannover",
  description = "Reduzieren Sie administrative Lasten durch intelligente Technologie und optimierte Workflows. Gewinnen Sie wertvolle Zeit für Ihre Patienten – DSGVO-konform und zukunftssicher.",
  primaryButtonText = "Kostenlosen Workflow-Audit vereinbaren",
  secondaryButtonText = "Praxis-Anfragen-Autopilot entdecken",
} = Astro.props;
---

<section
  class="from-vrly-neutral-0 via-vrly-blue-50 to-vrly-teal-50 relative overflow-hidden bg-gradient-to-br"
>
  <Wrapper
    variant="standard"
    class="relative z-20 overflow-hidden py-32 lg:pb-80"
  >
    <div class="relative">
      <GradientText
        colors={[
          "var(--color-vrly-green-500)",
          "var(--color-vrly-blue-500)",
          "var(--color-vrly-teal-700)",
        ]}
        animationSpeed={3}
        showBorder={false}
        className="text-4xl tracking-tighter text-balance md:text-6xl"
      >
        <h1>
          {title}
        </h1>
      </GradientText>

      <Text
        tag="p"
        variant="textLG"
        data-aos="fade-up"
        data-aos-duration="1500"
        class="text-vrly-slate-400 mt-6 max-w-2xl font-medium md:text-balance"
      >
        {description}
      </Text>

      <!-- Value proposition badges -->
      <div
        data-aos="fade-up"
        data-aos-duration="1800"
        class="mt-8 flex flex-wrap gap-3"
      >
        <span
          class="bg-vrly-green-50 text-vrly-green-700 border-vrly-green-200 inline-flex items-center rounded-full border px-3 py-1 text-sm font-medium"
        >
          ✓ 2-5 Stunden Zeitersparnis pro Woche
        </span>
        <span
          class="bg-vrly-blue-50 text-vrly-blue-700 border-vrly-blue-200 inline-flex items-center rounded-full border px-3 py-1 text-sm font-medium"
        >
          ✓ DSGVO-konforme Automatisierung
        </span>
        <span
          class="bg-vrly-teal-50 text-vrly-teal-700 border-vrly-teal-200 inline-flex items-center rounded-full border px-3 py-1 text-sm font-medium"
        >
          ✓ Spezialisiert auf Psychotherapie
        </span>
      </div>

      <div
        data-aos="fade-up"
        data-aos-duration="2000"
        class="mt-12 flex flex-col items-start gap-4 sm:flex-row sm:items-center"
      >
        <Link
          size="base"
          variant="default"
          href={EXTERNAL_LINKS.workflowAudit}
          gap="xs"
          class="bg-vrly-blue-500 hover:bg-vrly-blue-600 group border-0 px-6 py-3 text-white"
        >
          {primaryButtonText}
          <ChevronRight
            size="sm"
            class="easy-out-in duration-300 group-hover:translate-x-2"
          />
        </Link>
        <Link
          size="base"
          variant="muted"
          href="/leistungen"
          gap="xs"
          class="text-vrly-slate-500 hover:text-vrly-blue-600 group"
        >
          {secondaryButtonText}
          <ChevronRight
            size="sm"
            class="easy-out-in duration-300 group-hover:translate-x-2"
          />
        </Link>
      </div>
    </div>
  </Wrapper>
</section>
<section>
  <Wrapper variant="standard" class="pt-24">
    <div
      class="z-40 -mt-40 grid grid-cols-1 items-start gap-12 lg:-mt-80 lg:grid-cols-2 lg:gap-24"
    >
      <Code
        data-aos="fade-up"
        data-aos-duration="2000"
        class="scrollbar-hide z-40 h-full rounded-xl p-8 text-xs shadow-2xl"
        code={`// VRLY Praxis-Anfragen-Autopilot
const automaticPatientInquiry = {
  eingangEmail: "neue-anfrage@praxis-hannover.de",
  patient: {
    name: "Max Mustermann",
    versicherung: "TK",
    anliegen: "Depressive Verstimmung",
    terminwunsch: "nächste 2 Wochen"
  },
  
  // Automatische DSGVO-konforme Verarbeitung
  verarbeitung: {
    kategorisierung: "Erstanfrage - Depression",
    priorität: "hoch",
    antwortTemplate: "erstberatung_depression.md",
    datenschutz: "DSGVO-konform",
    dokumentation: "automatisch"
  },
  
  // Benachrichtigung an Therapeut
  benachrichtigung: {
    an: "therapeut@praxis.de",
    betreff: "Neue priorisierte Patientenanfrage",
    zusammenfassung: "Erstanfrage Depression - TK versichert"
  }
};

// Zeitersparnis: 15 Min → 2 Min pro Anfrage`}
        lang="js"
        theme="css-variables"
      />
      <div
        data-aos="fade-up"
        data-aos-duration="2500"
        class="outline-vrly-neutral-200 z-40 h-full overflow-hidden rounded-xl bg-white p-8 shadow-2xl outline-1"
      >
        <!-- VRLY Dashboard Mockup -->
        <div class="space-y-6">
          <div class="flex items-center justify-between">
            <h3 class="text-vrly-slate-500 text-lg font-semibold">
              VRLY Dashboard
            </h3>
            <span
              class="bg-vrly-green-100 text-vrly-green-700 inline-flex items-center rounded-full px-2 py-1 text-xs font-medium"
            >
              Live
            </span>
          </div>

          <!-- Stats Cards -->
          <div class="grid grid-cols-2 gap-4">
            <div
              class="bg-vrly-blue-50 border-vrly-blue-200 rounded-lg border p-4"
            >
              <div class="text-vrly-blue-700 text-2xl font-bold">23</div>
              <div class="text-vrly-blue-600 text-sm">Anfragen heute</div>
            </div>
            <div
              class="bg-vrly-green-50 border-vrly-green-200 rounded-lg border p-4"
            >
              <div class="text-vrly-green-700 text-2xl font-bold">4.2h</div>
              <div class="text-vrly-green-600 text-sm">Zeit gespart</div>
            </div>
          </div>

          <!-- Recent Activities -->
          <div class="space-y-3">
            <div
              class="bg-vrly-neutral-100 flex items-center justify-between rounded-lg p-3"
            >
              <div class="flex items-center space-x-3">
                <div class="bg-vrly-green-500 h-2 w-2 rounded-full"></div>
                <span class="text-vrly-slate-500 text-sm"
                  >Anfrage automatisch kategorisiert</span
                >
              </div>
              <span class="text-vrly-slate-400 text-xs">vor 2 Min</span>
            </div>
            <div
              class="bg-vrly-neutral-100 flex items-center justify-between rounded-lg p-3"
            >
              <div class="flex items-center space-x-3">
                <div class="bg-vrly-blue-500 h-2 w-2 rounded-full"></div>
                <span class="text-vrly-slate-500 text-sm"
                  >DSGVO-konforme Antwort versendet</span
                >
              </div>
              <span class="text-vrly-slate-400 text-xs">vor 5 Min</span>
            </div>
            <div
              class="bg-vrly-neutral-100 flex items-center justify-between rounded-lg p-3"
            >
              <div class="flex items-center space-x-3">
                <div class="bg-vrly-teal-500 h-2 w-2 rounded-full"></div>
                <span class="text-vrly-slate-500 text-sm"
                  >Warteliste automatisch aktualisiert</span
                >
              </div>
              <span class="text-vrly-slate-400 text-xs">vor 8 Min</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Wrapper>
</section>
