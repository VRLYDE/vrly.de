---


interface Props {
    items: {
        image: string;
        alt: string;
        text: string;
        imagePosition: "left" | "right";
    }[];
}

const { items } = Astro.props;
---

<section class="py-20">
    <div class="container mx-auto px-4">
        {
            items.map((item, index) => (
                <div
                    class:list={[
                        "mb-12 flex flex-wrap items-center",
                        { "flex-row-reverse": item.imagePosition === "right" },
                    ]}>
                    <div class="w-full px-4 md:w-1/2">
                        <img
                            src={item.image}
                            alt={item.alt}
                            width={768}
                            height={512}
                            class="rounded-lg shadow-lg"
                            loading="lazy"
                            decoding="async"
                        />
                    </div>
                    <div class="w-full px-4 md:w-1/2">
                        <div class="prose lg:prose-xl">
                            <p>{item.text}</p>
                        </div>
                    </div>
                </div>
            ))
        }
    </div>
</section>
