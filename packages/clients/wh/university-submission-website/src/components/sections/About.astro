---
import { Image } from "astro:assets";
import about from "@/assets/pages/about/about.png";

const { title, subtitle, content } = Astro.props;
---

<div class="relative w-full flex-col items-center pb-40 text-sm font-medium">
  <div class="relative h-[50em] w-full overflow-hidden">
    <div
      class="absolute bottom-0 left-0 top-0 flex h-full w-full items-center justify-center overflow-hidden rounded-3xl"
    >
      <div
        class="absolute bottom-0 left-0 top-0 flex w-full flex-col items-center justify-center"
      >
        <Image
          src={about}
          alt="About"
          class="absolute bottom-0 left-0 top-0 inline-block h-full w-full max-w-full object-cover align-middle"
        />
      </div>
    </div>
  </div>
  <div class="mt-16 font-semibold">
    <div
      class="grid auto-cols-fr grid-cols-1 grid-rows-[auto] gap-[1.88rem] lg:grid-cols-[.6fr_1fr]"
    >
      <div class="col-span-1 row-span-1 text-[2.50rem] leading-none">
        <div class="flex items-center"><div>{title}</div></div>
      </div>
      <div class="col-span-1 row-span-1 text-3xl">
        <p class="mb-3" set:html={subtitle} />
        <p set:html={content} />
      </div>
    </div>
  </div>
</div>
